            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

        
          <% if current_user %>  
            
                <p class="navbar-brand"> 
                  Welcome <%= current_user.first_name.capitalize %> 
              
                  <%= link_to "Your profile", user_path(current_user) %>
